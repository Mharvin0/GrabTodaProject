<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".Register">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        app:cardCornerRadius="28dp">

        <!-- activity_booking.xml -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="353dp">

            <EditText
                android:id="@+id/editTextPickup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:hint="Enter pickup location" />

            <EditText
                android:id="@+id/editTextDropoff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextPickup"
                android:layout_margin="16dp"
                android:hint="Enter drop-off location" />

            <Button
                android:id="@+id/buttonCalculateFare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextDropoff"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="Calculate Fare" />

            <TextView
                android:id="@+id/textViewFare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonCalculateFare"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="Fare: "
                android:textSize="20sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
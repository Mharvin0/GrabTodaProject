<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance (in meters):"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/editTextDistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter distance"
        android:inputType="number"
        android:layout_below="@id/textViewDistance"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/textViewFareRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fare Rate (in Philippine peso per meter):"
        android:textSize="18sp"
        android:layout_below="@id/editTextDistance"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/editTextFareRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter fare rate"
        android:inputType="numberDecimal"
        android:layout_below="@id/textViewFareRate"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/buttonCalculateFare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Fare"
        android:layout_below="@id/editTextFareRate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/textViewFareResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/buttonCalculateFare"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>
</RelativeLayout>

